<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:id="toolbar"
      prefHeight="48"
      maxHeight="48"
      styleClass="directory-color"
      alignment="CENTER_LEFT"
      style="-fx-padding: 0 12 0 12"
      pickOnBounds="false"
      fx:controller="com.onebytellc.imageviewer.ui.directory.DirectoryToolbarController">

    <Button fx:id="addButton" style="-fx-padding: 0; -fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="addButtonImage" fitHeight="26" preserveRatio="true">
                <Image url="@../../image/add-button.png"/>
            </ImageView>
        </graphic>
    </Button>

</HBox>
